@using Maew123.Web.Utilities;
@using System.Net.Http.Headers
@inherits LayoutComponentBase

@* <RadzenComponents /> *@

<div class="wrapper">
    <!-- Navbar -->
    <NavMenu />

    <!-- Main Sidebar Container -->
    <Sidebar />

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <div class="@CustomContainerClass">
            <div class="content-container">
                @Body
            </div>
        </div>
    </div>

    <!-- Control Sidebar -->
    <ControlSidebar />

    <!-- Main Footer -->
    <Footer />
</div>

@code {
    [Parameter]
    public string CustomContainerClass { get; set; } = "custom-container";
}

